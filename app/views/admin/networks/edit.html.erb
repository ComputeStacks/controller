<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to 'Networks', '/admin/networks' %></li>
      <li class="active">Edit <%= @network.name %></li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @network.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @network, url: "/admin/networks/#{@network.id}" do |f| %>
      <div class="panel panel-default"><%= render partial: 'admin/networks/form', locals: { f: f, network: @network } %></div>
    <% end %>
  </div>
  <%= render partial: 'admin/networks/errors' unless @network.errors.count.zero? %>
</div>
