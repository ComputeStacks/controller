<div class="panel-body">
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, required: true, class: 'form-control' %>
        <span class="help-block">Lowercase and no special characters or spaces.</span>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <label>Label</label>
        <%= f.text_field :label, required: true, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <label>Network (IPv4)</label>
        <%= f.text_field :subnet, required: true, class: 'form-control', value: network.to_net %>
        <span class="help-block">For Bridge Networks, we recommend at least a /16. For Clustered networking, we suggest multiple networks no larger than 21.</span>
      </div>
    </div>
  </div>
  <div class="row"><div class="col-xs-12"><hr></div></div>
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <label>Region</label>
        <%= f.collection_select :region_id, Region.sorted, :id, :name, {}, { class: 'form-control' } %>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-12">
      <h5>Network Settings</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-sm-2 col-xs-12">
      <div class="form-group">
        <label>Shared Network</label>
        <%= f.check_box :is_shared, class: 'form-control' %>
        <span class="help-block">If true and using the Bridge driver, all project networks will be created within this network.</span>
      </div>
    </div>
    <div class="col-md-8 col-sm-10 col-xs-12">
      <div class="form-group">
        <%= f.label :network_driver, 'Network Driver' %>
        <%= f.select :network_driver, [%w(Clustered calico_docker), %w(Bridge bridge)], {}, { class: 'form-control'} %>
      </div>
    </div>
  </div>
  <div class="row"><div class="col-xs-12"><hr></div></div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <span class="help-block">
        <b>Note:</b> Any change to the network in ComputeStacks also requires changes on the container hosts.<br>
        Please consult the documentation.
      </span>
    </div>
  </div>
</div>
<div class="panel-footer">
  <%= link_to t('actions.cancel'), '/admin/networks', class: 'btn btn-default', style: 'margin-right: 10px;' %>
  <%= submit_tag t('actions.save'), class: 'btn btn-success' %>
</div>
