<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to 'Regions', '/admin/locations' %></li>
      <li class="active"><%= @location.name %></li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @location.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @location, url: "/admin/locations/#{@location.id}" do |f| %>
      <div class="panel panel-default"><%= render partial: 'admin/locations/form', locals: { f: f } %></div>
    <% end %>
  </div>
  <%= render partial: 'admin/locations/errors' unless @location.errors.count.zero? %>
</div>
