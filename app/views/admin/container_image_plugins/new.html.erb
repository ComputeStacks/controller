<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to 'Image Plugins', admin_container_image_plugins_path %></li>
      <li class="active">Register Image Plugin</li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @plugin.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @plugin, url: admin_container_image_plugins_path do |f| %>
      <div class="panel panel-default">
        <div class="panel-body"><%= render partial: 'admin/container_image_plugins/form', locals: { f: f } %></div>
        <div class="panel-footer text-right">
          <%= link_to t('actions.cancel'), admin_container_image_plugins_path, class: 'btn btn-default pull-left' %>
          <%= submit_tag t('actions.save'), class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render partial: 'application/model_errors', locals: { errors: @plugin.errors, obj: 'plugin' } unless @plugin.errors.count.zero? %>
</div>
