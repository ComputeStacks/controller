<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to 'System Notifications', "/admin/system_notifications" %></li>
      <li class="active">New Notification</li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @notification.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-md-8' %>">
    <%= form_for @notification, url: admin_system_notifications_path, method: :post do |f| %>
      <div class="panel panel-default">
        <%= render partial: "notifications/form", locals: { f: f, rule_base: "system_notification_rules", rules: admin_notifier_available_rules, notification: @notification } %>
        <div class="panel-footer">
          <%= link_to t('actions.cancel'), admin_system_notifications_path, class: 'btn btn-default' %>
          <%= submit_tag t('actions.create'), class: 'btn btn-success pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render partial: 'application/model_errors', locals: { errors: @notification.errors, obj: 'notification' } unless @notification.errors.count.zero? %>
</div>
