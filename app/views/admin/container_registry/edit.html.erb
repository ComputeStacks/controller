<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to "Container Registries", admin_registries_path %></li>
      <li><%= link_to @registry.label, admin_registry_path(@registry) %></li>
      <li class="active">Edit Registry</li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @registry.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @registry, url: admin_registry_path(@registry) do |f| %>
      <div class="panel panel-default">
        <%= render partial: "admin/container_registry/form", locals: {f: f} %>
        <div class="panel-footer text-right">
          <%= link_to t('actions.cancel'), admin_registry_path(@registry), class: 'btn btn-default pull-left' %>
          <%= submit_tag t('actions.update'), class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render(partial: 'application/model_errors', locals: { errors: @registry.errors, obj: "Image Registry" }) unless @registry.errors.count.zero? %>
</div>
