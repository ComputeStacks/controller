<div class="panel-body">
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.label :user_email, 'Email Address' %>
        <%= f.text_field :user_email, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.label :skip_confirmation, 'Skip Confirmation?' %>
        <%= f.check_box :skip_confirmation, class: 'form-control' %>
        <span class="help-block">Check to instantly add this collaborator, and skip sending the email confirmation.</span>
      </div>
    </div>
  </div>
</div>
