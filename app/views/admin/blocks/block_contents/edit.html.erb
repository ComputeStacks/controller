<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to "Content Blocks", "/admin/blocks" %></li>
      <li><%= link_to truncate(@block.title, length: 30), @base_url %></li>
      <li><%= link_to @block_content.locale, @section_url %></li>
      <li class="active">Edit</li>
    </ol>
  </div>
<% end %>


<div class="row">
  <div class="<%= @block_content.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @block_content, url: @section_url do |f| %>
      <div class="panel panel-default"><%= render partial: 'admin/blocks/block_contents/form', locals: { f: f } %></div>
    <% end %>
  </div>
  <%= render partial: 'admin/blocks/block_contents/errors' unless @block_content.errors.count.zero? %>
</div>
