<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to "Regions", "/admin/locations" %></li>
      <li class="active">Create Availability Zone</li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @region.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @region, url: "/admin/regions" do |f| %>
      <div class="panel panel-default"><%= render partial: 'admin/regions/form', locals: { f: f } %></div>
    <% end %>
  </div>
  <%= render partial: 'admin/regions/errors' unless @region.errors.count.zero? %>
</div>
