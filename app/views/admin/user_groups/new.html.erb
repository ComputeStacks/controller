<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to 'User Groups', '/admin/user_groups' %></li>
      <li class="active">Create User Group</li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @group.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @group, url: "/admin/user_groups" do |f| %>
      <div class="panel panel-default"><%= render partial: 'admin/user_groups/form', locals: { f: f } %></div>
    <% end %>
  </div>
  <%= render partial: 'admin/user_groups/errors' unless @group.errors.count.zero? %>
</div>
