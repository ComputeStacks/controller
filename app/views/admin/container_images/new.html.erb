<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to "Container Images", "/admin/container_images" %></li>
      <li class="active">Create Container Image</li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @container.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @container, url: "/admin/container_images" do |f| %>
      <%= f.hidden_field :parent_image_id %>
      <div class="panel panel-default">
        <%= render partial: "container_images/form", locals: { f: f, image: @container }%>
        <div class="panel-footer text-right">
          <%= link_to t('actions.cancel'), "/admin/container_images", class: 'btn btn-default pull-left' %>
          <%= submit_tag t('actions.continue'), class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render(partial: 'application/model_errors', locals: { errors: @container.errors, obj: t('obj.image') }) unless @container.errors.count.zero? %>
</div>
