<% content_for :title, "#{@zone.name} Add Collaborator" %>
<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to t('dns.index.breadcrumb'), "/admin/dns" %></li>
      <li><%= link_to @zone.name, "/admin/dns/#{@zone.id}" %></li>
      <li class="active">Collaborators</li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @collab.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <div class="alert alert-danger">
      <%= collab_content_warning %>
    </div>
  </div>
</div>

<div class="row">
  <div class="<%= @collab.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @collab, url: "/admin/dns/#{@zone.id}/collaborators" do |f| %>
      <div class="panel panel-default">
        <%= render partial: 'admin/collaborators/form', locals: { f: f } %>
        <div class="panel-footer">
          <%= link_to t('actions.cancel'), "/admin/dns/#{@zone.id}/collaborators", class: 'btn btn-default', style: 'margin-right: 10px;' %>
          <%= submit_tag t('actions.invite'), class: 'btn btn-success pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render partial: 'application/model_errors', locals: { obj: 'Collaborator', errors: @collab.errors } unless @collab.errors.count.zero? %>
</div>

<div class="row">
  <div class="<%= @collab.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= collab_content_faq %>
  </div>
</div>
