<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to 'Load Balancers', '/admin/load_balancers' %></li>
      <li class="active">Edit <%= @load_balancer.label %></li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @load_balancer.errors.count.zero? ? 'col-md-10 col-md-offset-1' : 'col-sm-8' %>">
    <%= form_for @load_balancer, url: "/admin/load_balancers/#{@load_balancer.id}" do |f| %>
      <div class="panel panel-default"><%= render partial: 'admin/load_balancers/form', locals: { f: f } %></div>
    <% end %>
  </div>
  <%= render partial: 'admin/load_balancers/errors' unless @load_balancer.errors.count.zero? %>
</div>
