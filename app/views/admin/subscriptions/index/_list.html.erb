<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Service</th>
      <th>Status</th>
      <th>Created</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% subscriptions.each do |i| %>
      <tr>
        <td><%= link_to i.id, admin_subscription_path(i) %></td>
        <td><%= i.user.nil? ? '...' : link_to(i.user.full_name, admin_user_path(i.user)) %></td>
        <td><%= i.linked_obj.nil? ? '...' : link_to(i.linked_obj.name, admin_containers_path(i.linked_obj)) %></td>
        <td><%= i.active ? 'Active' : 'Inactive' %></td>
        <td><%= l i.created_at, format: :short %></td>
        <td class="text-right">
          <div class="btn-group">
            <%= link_to icon('fa-solid', 'gear').html_safe, admin_subscription_path(i), class: 'btn btn-sm btn-default' %>
            <%= link_to raw("<i class='fa fa-wrench'></i>"), edit_admin_subscription_path(i), class: 'btn btn-sm btn-default' %>
            <%= link_to raw("<i class='fa fa-trash fa-danger'></i>"), admin_subscription_path(i), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
