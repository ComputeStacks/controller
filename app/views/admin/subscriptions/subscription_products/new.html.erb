<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to 'Subscriptions', '/admin/subscriptions' %></li>
      <li><%= link_to "#{@subscription.id}", admin_subscription_path(@subscription) %></li>
      <li class="active">Create Subscription Product</li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @subscription_product.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @subscription_product, url: "/admin/subscriptions/#{@subscription.id}/subscription_products" do |f| %>
      <div class="panel panel-default">
        <%= render partial: 'admin/subscriptions/subscription_products/form', locals: { f: f } %>
      </div>
    <% end %>
  </div>
  <%= render partial: 'admin/subscriptions/subscription_products/errors' unless @subscription_product.errors.count.zero? %>
</div>
