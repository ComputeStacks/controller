<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to "Regions", "/admin/locations" %></li>
      <li><%= link_to @node.region.name, "/admin/regions/#{@node.region.id}" %></li>
      <li class="active">Create Node</li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @node.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @node, url: "/admin/nodes" do |f| %>
      <div class="panel panel-default"><%= render partial: 'admin/nodes/form', locals: { f: f } %></div>
    <% end %>
  </div>
  <%= render partial: 'admin/nodes/errors' unless @node.errors.count.zero? %>
</div>
