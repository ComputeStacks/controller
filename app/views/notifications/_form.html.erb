<div class="panel-body">
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :label %>
        <%= f.text_field :label, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :notifier %>
        <%= f.select :notifier, notifier_transport_list, {}, { class: 'form-control '} %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :value, 'Send To' %>
        <%= f.text_field :value, class: 'form-control' %>
        <span class="help-block">
          For the email notifier, this will be an email address. For all others, include the full webhook URL supplied by the selected service.
        </span>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="panel-body">
  <div class="row">
    <div class="col-xs-12">
      <div class="pull-right text-right">
        <div class="form-group">
          <label for="select_all_boxes">
            <%= notifier_checkbox_select_all notification, rules %>
            Select All
          </label>
        </div>
      </div>
      <p class="lead">Rules</p>
    </div>
  </div>
  <div class="row">
    <% rules.each do |i| %>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
        <div class="form-group">
          <%= f.label :rules, for: "#{rule_base}_#{i.downcase}" do %>
            <%= f.check_box :rules, { multiple: true, include_hidden: false, class: 'notification_rule_boxes' }, i %>
            <%= i %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
