<% unless request.xhr? %>
  <% content_for :breadcrumb do %>
    <div class="row has-breadcrumb">
      <ol class="breadcrumb">
        <li><%= link_to t('dns.index.breadcrumb'), "/dns" %></li>
        <li><%= link_to @zone.name, "/dns/#{@zone.id}" %></li>
        <li class="active"><%= t('collaborators.collaborator.plural').capitalize %></li>
      </ol>
    </div>
  <% end %>
<% end %>

<%= render partial: 'collaborators/index', locals: { resource: @zone, collaborators: @collaborators, base_path: "/dns/#{@zone.id}/collaborators" } %>

