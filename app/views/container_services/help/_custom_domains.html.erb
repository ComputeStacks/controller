<div class="row">
  <div class="col-sm-6">
    <%= image_content_domain service.container_image %>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="col-xs-6">
        <small><%= t('container_services.setup.domains.ip').upcase %></small>
        <% service.public_dns_records.map do |i| %>
          <br>
          <code><%= i %></code>
        <% end %>
      </div>
      <div class="col-xs-6">
        <small><%= t('container_services.setup.domains.title').upcase %></small><br>
        <code><%= link_to service.default_domain, "http://#{service.default_domain}", target: '_blank' %></code>
      </div>
    </div>
    <div class="row" style="margin-top:15px;">
      <div class="col-md-12">
        <%= render partial: "container_services/show/domains", locals: {service: @service} if @service.allow_custom_domains? %>
      </div>
    </div>
  </div>
</div>
<hr>
