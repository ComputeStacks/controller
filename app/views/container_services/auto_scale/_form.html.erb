<div class="panel-body">
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :auto_scale, t('container_services.auto_scale.form.enable.label') %>
        <%= f.check_box :auto_scale, class: 'form-control' %>
        <span class="help-block"><%= t 'container_services.auto_scale.form.enable.help' %></span>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="panel-body">
  <div class="row">
    <div class="col-xs-12">
      <h5><%= t 'container_services.auto_scale.form.price.title' %></h5>
      <%= t 'container_services.auto_scale.form.price.help_html' %>
      <%= t('container_services.auto_scale.form.price.help_quote_html', price: service.auto_scale_quote) unless service.auto_scale_quote.nil? %>
      <p>&nbsp;</p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :auto_scale_max, t('container_services.auto_scale.form.price.label') %>
        <%= f.text_field :auto_scale_max, class: 'form-control' %>
      </div>
    </div>
  </div>
</div>
<% if service.can_scale? %>
  <hr>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-12">
        <h5><%= t 'container_services.auto_scale.form.horizontal.title' %></h5>
        <%= t 'container_services.auto_scale.form.horizontal.help_html' %>
        <p>&nbsp;</p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= f.label :auto_scale_horizontal, t('container_services.auto_scale.form.horizontal.label') %>
          <%= f.check_box :auto_scale_horizontal, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
