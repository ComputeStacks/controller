<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to t('obj.services'), "/container_services" %></li>
      <li><%= link_to @service.name, "/container_services/#{@service.id}" %></li>
      <li><%= link_to "Host Entries", "/container_services/#{@service.id}/host_entries" %></li>
      <li class="active">Edit Host Entries <%= @entry.hostname %></li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @entry.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @entry, url: "/container_services/#{@service.id}/host_entries/#{@entry.id}", method: :put do |f| %>
      <div class="panel panel-default">
        <%= render partial: 'container_services/host_entries/form', locals: { f: f } %>
        <div class="panel-footer">
          <%= link_to t('actions.cancel'), "/container_services/#{@service.id}/host_entries", class: 'btn btn-default', style: 'margin-right: 10px;' %>
          <%= submit_tag t('actions.update'), class: 'btn btn-success pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render partial: 'application/model_errors', locals: { errors: @entry.errors, obj: 'host entry' } unless @entry.errors.count.zero? %>
</div>
