<% unless request.xhr? %>
  <% content_for :title, "#{@image.label} #{t('collaborators.collaborator.plural').capitalize}" %>
  <% content_for :breadcrumb do %>
    <div class="row has-breadcrumb">
      <ol class="breadcrumb">
        <li><%= link_to t('obj.images'), container_images_path %></li>
        <li><%= link_to @image.label, container_image_path(@image) %></li>
        <li class="active"><%= t('collaborators.collaborator.plural').capitalize %></li>
      </ol>
    </div>
  <% end %>
<% end %>

<%= render partial: 'collaborators/index', locals: { resource: @image, collaborators: @collaborators, base_path: "/container_images/#{@image.id}/collaborators" } %>

