<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to t('obj.images'), container_images_path %></li>
      <li><%= link_to @setting.container_image.label, container_image_path(@setting.container_image) %></li>
      <li class="active"><%= t 'container_images.params.settings.breadcrumb.edit', setting: @setting.name %></li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @setting.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @setting, url: "#{container_image_path(@setting.container_image)}/setting_params/#{@setting.id}", method: :put do |f| %>
      <div class="panel panel-default">
        <%= render partial: 'container_images/setting_params/form', locals: { f: f } %>
        <div class="panel-footer">
          <%= link_to t('actions.cancel'), container_image_path(@setting.container_image), class: 'btn btn-default', style: 'margin-right: 10px;' %>
          <%= submit_tag t('actions.update'), class: 'btn btn-success pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render partial: 'application/model_errors', locals: { errors: @setting.errors, obj: 'setting' } unless @setting.errors.count.zero? %>
</div>
