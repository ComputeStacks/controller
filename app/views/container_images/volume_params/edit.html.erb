<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to t('obj.images'), container_images_path %></li>
      <li><%= link_to @image.label, container_image_path(@image) %></li>
      <li class="active">Edit Volume <%= @volume.label %></li>
    </ol>
  </div>
<% end %>

<div class="row">
  <div class="<%= @volume.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @volume, url: container_image_volume_path(@volume), method: :put do |f| %>
      <div class="panel panel-default">
        <%= render partial: 'container_images/volume_params/form', locals: { f: f } %>
        <div class="panel-footer">
          <%= link_to t('actions.cancel'), container_image_path(@volume.container_image), class: 'btn btn-default', style: 'margin-right: 10px;' %>
          <%= submit_tag t('actions.update'), class: 'btn btn-success pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render partial: 'application/model_errors', locals: { errors: @volume.errors, obj: 'Volume' } unless @volume.errors.count.zero? %>
</div>
