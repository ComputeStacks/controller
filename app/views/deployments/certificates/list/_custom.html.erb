<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t 'obj.domain' %></th>
      <th><%= t 'container_services.certificates.attributes.expires' %></th>
      <th><%= t 'container_services.certificates.attributes.issuer' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if certs.empty? %>
      <tr>
        <td class="text-center" colspan="4"><%= t 'container_services.certificates.none.custom' %></td>
      </tr>
    <% end %>
    <% certs.each do |i| %>
      <tr>
        <td><%= i.formatted_subject %></td>
        <td><%= l i.not_after.in_time_zone(Time.zone), format: :long %></td>
        <td><%= i.formatted_issuer %></td>
        <td class="text-right">
          <div class="btn-group">
            <%= link_to "<i class='fa fa-wrench'></i>".html_safe, edit_certificate_path(i), class: 'btn btn-default btn-sm' %>
            <%= link_to raw("<i class='fa fa-trash'></i>"), certificate_path(i), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: t('confirm_prompt')} %>
          </div>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
