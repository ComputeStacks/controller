<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <% if @deployment %>
        <li><%= link_to t('obj.deployments'), "/deployments" %></li>
        <li><%= link_to @deployment.name, deployments_path(@deployment) %></li>
      <% end %>
      <li class="active"><%= t 'container_services.certificates.breadcrumb.new' %></li>
    </ol>
  </div>
<% end %>


<div class="row">
  <div class="<%= @cert.errors.count.zero? ? 'col-md-10 col-md-offset-1' : 'col-sm-8' %>">
    <%= form_for @cert, url: "/deployments/#{@deployment.token}/certificates", method: :post do |f| %>
      <div class="panel panel-default"><%= render partial: 'deployments/certificates/form', locals: { f: f } %></div>
    <% end %>
  </div>
  <%= render partial: 'application/model_errors', locals: { obj: 'certificate', errors: @cert.errors } unless @cert.errors.count.zero? %>
</div>
