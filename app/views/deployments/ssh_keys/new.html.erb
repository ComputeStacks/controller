<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to "Projects", "/deployments" %></li>
      <li><%= link_to @deployment.name, "/deployments/#{@deployment.token}" %></li>
      <li><%= link_to "SSH Keys", "/deployments/#{@deployment.token}/ssh_keys" %></li>
      <li class="active">Add SSH Public Key</li>
    </ol>
  </div>
<% end %>

<div class="row">
  <%= render partial: "ssh_keys/form", locals: { ssh_key: @ssh_key, base_path: "/deployments/#{@deployment.token}/ssh_keys" } %>
</div>
