<% unless request.xhr? %>
  <% content_for :breadcrumb do %>
    <div class="row has-breadcrumb">
      <ol class="breadcrumb">
        <li><%= link_to t('obj.deployments'), "/deployments" %></li>
        <li><%= link_to @deployment.name, deployments_path(@deployment) %></li>
        <li class="active"><%= t('collaborators.collaborator.plural').capitalize %></li>
      </ol>
    </div>
  <% end %>
<% end %>

<%= render partial: 'collaborators/index', locals: { resource: @deployment, collaborators: @collaborators, base_path: "/deployments/#{@deployment.token}/collaborators" } %>

