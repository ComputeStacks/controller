<% content_for :title, "#{@deployment.name} Events" %>

<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to 'Projects', "/deployments" %></li>
      <li><%= link_to @deployment.name, deployments_path(@deployment) %></li>
      <li class="active"><%= t 'events.plural' %></li>
    </ol>
  </div>
<% end %>

<div class="remote-resource <% if params[:page].blank? %>refresh<% end %>" data-url="<%= deployments_path @deployment %>/events">
  <div class="row">
    <div class="col-md-12 text-center">
      <%= icon('fa-solid fa-spin', 'rotate') %>
    </div>
  </div>
</div>
