<div class="panel-body">
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <label><%= t 'volumes.form.label' %></label>
        <%= f.text_field :label, class: 'form-control' %>
        <span class="help-block"><%= t 'volumes.form.label_help' %></span>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <label><%= t 'volumes.form.mount_path' %></label>
        <%= f.text_field :container_path, class: 'form-control' %>
        <span class="help-block"><%= t 'volumes.form.mount_path_help' %></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <label for="deployment_id"><%= t 'obj.deployment' %></label>
      <select name="deployment_id" class="form-control chosen-select-standard" id="volume_deployment_id">
        <%= render partial: 'application/project_select', locals: { deployment_id: @deployment&.id, deployments: @volume.user&.deployments&.sorted } %>
      </select>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="volume_container_service_id"><%= t 'obj.service' %></label>
        <select class="form-control chosen-select-standard" name="volume[container_service_id]" id="volume_container_service_id" <% if @deployment.nil? || @deployment.services.empty? %>disabled="disabled"<% end %>>
          <%= render partial: 'application/service_select', locals: { services: @deployment&.services&.sorted, service_id: @volume.container_service_id } %>
        </select>
      </div>
    </div>
    <% if %w(new create).include?(controller.action_name) || @volume.to_trash %>
      <div class="col-md-4 col-xs-12">
        <div class="form-group">
          <% if @volume.to_trash %>
            <label><%= t 'volumes.form.destroy' %></label>
            <%= f.check_box :to_trash, class: 'form-control' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render partial: "container_images/volume_params/borg_form", locals: { f: f, volume: @volume } if Feature.check('backups', current_user) %>



<div class="panel-footer">
  <% if @back_url == "/volumes" %>
    <%= link_to t('actions.cancel'), %w(new create).include?(controller.action_name) ? "/volumes" : "/volumes/#{@volume.id}", class: 'btn btn-default', style: 'margin-right: 10px;' %>
  <% else %>
    <%= link_to t('actions.cancel'), @base_url, class: 'btn btn-default', style: 'margin-right: 10px;' %>
  <% end %>
  <%= submit_tag t('actions.save'), class: 'btn btn-success pull-right' %>
</div>
