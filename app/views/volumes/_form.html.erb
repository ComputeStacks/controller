<div class="panel-body">
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <label><%= t 'volumes.form.label' %></label>
        <%= f.text_field :label, class: 'form-control' %>
        <span class="help-block"><%= t 'volumes.form.label_help' %></span>
      </div>
    </div>
  </div>
</div>

<%= render partial: "container_images/volume_params/borg_form", locals: { f: f, volume: @volume } if Feature.check('backups', current_user) %>


<div class="panel-footer">
  <% if @back_url == "/volumes" %>
    <%= link_to t('actions.cancel'), %w(new create).include?(controller.action_name) ? "/volumes" : "/volumes/#{@volume.id}", class: 'btn btn-default', style: 'margin-right: 10px;' %>
  <% else %>
    <%= link_to t('actions.cancel'), @base_url, class: 'btn btn-default', style: 'margin-right: 10px;' %>
  <% end %>
  <%= submit_tag t('actions.save'), class: 'btn btn-success pull-right' %>
</div>
