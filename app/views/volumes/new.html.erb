<% content_for :breadcrumb do %>
  <div class="row has-breadcrumb">
    <ol class="breadcrumb">
      <li><%= link_to t('obj.volume'), "/volumes" %></li>
      <li class="active"><%= t('volumes.list.new_button') %></li>
    </ol>
  </div>
<% end %>


<div class="row">
  <div class="<%= @volume.errors.count.zero? ? 'col-lg-8 col-lg-offset-2 col-md-12' : 'col-sm-8' %>">
    <%= form_for @volume, url: "/volumes", method: :post do |f| %>
      <div class="panel panel-default"><%= render partial: 'volumes/form', locals: { f: f } %></div>
    <% end %>
  </div>
  <%= render partial: 'application/model_errors', locals: { errors: @volume.errors, obj: t('obj.volume') } unless @volume.errors.count.zero? %>
</div>
